<h2 class="new_edit">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, class:"edits" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email Address" %>
  </div>

  <div class="field">
    <%= f.label :password, class:"edits" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", placeholder:"Password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class:"edits" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"Re-enter Password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
